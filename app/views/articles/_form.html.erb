<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, Article::TYPES %>
  </div>

  <br/>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <br/>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_field :text, size: 200 %>
  </div>

  <br/>

  <div class="field">
    <%= form.label :story %>
    <%= form.select :story_id, Story.all.pluck(:name, :id) %>
  </div>


  <br/>
  <br/>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
